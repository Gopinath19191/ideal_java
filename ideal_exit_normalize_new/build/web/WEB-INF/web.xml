<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Authenticator</filter-name>
        <filter-class>com.defiance.ideal.exitMgmt.utils.Authenticator</filter-class>
        <init-param>
            <param-name>allowedURL</param-name>
            <param-value>loginAuthenticate.htm</param-value>
        </init-param>
        <init-param>
            <param-name>allowedURL3</param-name>
            <param-value>tokenValidation.htm</param-value>
        </init-param>
        <init-param>
            <param-name>allowedURL2</param-name>
            <param-value>/WEB-INF/jsp/login.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Authenticator</filter-name>
        <url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Authenticator</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
